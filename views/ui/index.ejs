  <!-- Doctors -->
  <section class="doctors-area ptb-100">
    <div class="container">
      <div class="section-title">
        <h2>Meet Our Doctors</h2>
      </div>
      <div class="row justify-content-center">
        <% doctors.slice(0, 3).forEach((doctor, index)=> { %>
          <div class="col-sm-6 col-lg-4 wow fadeInUp" data-wow-delay=".3s">
            <div class="doctor-item">
              <div class="doctor-top">
                <img class="w-100 meet_doctor_img" src="/uploads/<%= doctor.doctorImage %>" alt="Doctor" />
                <a href="/appointment">Get Appointment</a>
              </div>
              <div class="doctor-bottom">
                <h3>
                  <a href="/doctor-details/<%=doctor.id %>">
                    <%= doctor.name %>
                  </a>
                </h3>
                <span>
                  <%= doctor.specialist %>
                </span>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
      <div class="doctor-btn">
        <a href="/doctor">See All</a>
      </div>
    </div>
  </section>
  <!-- End Doctors -->

  <!-- Blog -->
  <section class="blog-area pt-100 pb-70">
    <div class="container">
      <div class="section-title">
        <h2>Our Latest Blogs</h2>
      </div>
      <div class="row justify-content-center">
        <% blogs.slice(0, 3).forEach((blog)=> { %>
          <div class="col-sm-6 col-lg-4 wow fadeInUp" data-wow-delay=".3s">
            <div class="blog-item">
              <div class="blog-top">
                <a href="/blog-details">
                  <img class="blog_image" src="/uploads/<%= blog.blogImage %>" alt="Blog" />
                </a>
              </div>
              <div class="blog-bottom">
                <h3>
                  <a href="/blog-details">
                    <%= blog.title %>
                  </a>
                </h3>
                <p><%- blog.description %></p>
                <ul>
                  <li>
                    <a href="/blog-details/<%= blog.id  %>">
                      Read More
                      <i class="icofont-long-arrow-right"></i>
                    </a>
                  </li>
                  <li>
                    <i class="icofont-calendar"></i>
                    <%= new Date(blog.created).toLocaleDateString() %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </section>

